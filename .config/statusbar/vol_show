#!/bin/bash

# Prints the current volume or ðŸ”‡ if muted.
[ $(pamixer --get-mute) = true ] && echo î‘š  && exit

# Get volume level.
vol="$(pamixer --get-volume)"

if [ "$vol" -gt "60" ]; then
	icon="î‘Š "
elif [ "$vol" -gt "30" ]; then
	icon="î‘Œ "
